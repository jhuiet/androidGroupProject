<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    tools:context="jolliffe.a415.csc.groupproject.HomePage">


    <TextView
        android:id="@+id/main_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="Button"
        android:layout_marginRight="10dp"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/main_title_text"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/track_button"
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:text="Button"

        android:layout_alignBaseline="@+id/add_button"
        android:layout_alignBottom="@+id/add_button"
        android:layout_toEndOf="@+id/add_button"
        android:layout_marginStart="28dp" />
</RelativeLayout>
